<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="PawnRaceMobile.Screens.ModeSelection">
    <ContentPage.Content>
        <Grid RowSpacing="0">
            <Grid.RowDefinitions>
                <RowDefinition Height="5*" />
                <RowDefinition Height="*" />
                <RowDefinition Height="5*" />
            </Grid.RowDefinitions>
            <ContentView x:Name="onePlayerButton" BackgroundColor="{StaticResource dark}"
                     Grid.Row="0">
                <Label Text="1" Style="{StaticResource lightLabel}" FontSize="128" />
            </ContentView>

            <ContentView BackgroundColor="{StaticResource light}"
                     Grid.Row="1">
                <Label Text="Select number of players" Style="{StaticResource descriptionLabel}" />
            </ContentView>

            <ContentView x:Name="twoPlayersButton" BackgroundColor="{StaticResource dark}"
                     Grid.Row="2">
                <Label Text="2" Style="{StaticResource lightLabel}" FontSize="128" />
            </ContentView>
        </Grid>
    </ContentPage.Content>
</ContentPage>