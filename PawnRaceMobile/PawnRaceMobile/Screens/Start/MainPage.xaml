<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:local="clr-namespace:PawnRaceMobile"
             x:Class="PawnRaceMobile.MainPage">
    <ContentPage.Content>
        <Grid RowSpacing="0">
            <Grid.RowDefinitions>
                <RowDefinition Height="*" />
                <RowDefinition Height="*" />
            </Grid.RowDefinitions>
            <ContentView x:Name="startGameButton" BackgroundColor="{StaticResource dark}"
                     Grid.Row="0">
                <Label Text="Start" Style="{StaticResource lightLabel}" />
            </ContentView>
            <ContentView x:Name="rulesButton" BackgroundColor="{StaticResource light}"
                     Grid.Row="1">
                <Label Text="Rules" Style="{StaticResource darkLabel}" />
            </ContentView>
        </Grid>
    </ContentPage.Content>
</ContentPage>